// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  Int @id @default(autoincrement())
  name                String
  email               String  @unique
  role                UserType
  password            String
  org_id              Int
  organization        Organization @relation(fields: [org_id], references: [id])
}

model Organization {
  id                  Int @id @default(autoincrement())
  name                String
  orgLocation         String
  description         String
  user                User[]
  jobs                Jobs[]
}

model Jobs{
  id                  Int @id @default(autoincrement())
  roleName            String
  jobDescription      String
  vacancies           Int
  org_id              Int
  organization        Organization @relation(fields: [org_id], references: [id])
  skill_id            Int
  skill               Skill @relation(fields: [skill_id], references: [id])
  jobCategory         String
  jobPublishDate      DateTime
  expiryDate          DateTime
  experience          Int
  jobTier             String
  skillList           String
  jobSalary           Float
  candidateJobStatus  CandidateJobStatus[]           
}

model Candidate{
  id                  Int @id @default(autoincrement())
  name                String
  candidate_token     String
  candidateLocation   String
  experience          Float
  email               String
  phone               String
  candidateStatus     CandidateJobStatus[]
  candResumeURL       String
}

model CandidateJobStatus{
  id                  Int @id @default(autoincrement())
  candidateId         Int
  candidate           Candidate @relation(fields: [candidateId], references: [id])  
  jobId               Int
  job                 Jobs @relation(fields: [jobId], references: [id])
}

model Skill{
  id                  Int @id @default(autoincrement())
  skillName           String
  jobs                Jobs[]
}

enum UserType {
  ADMIN
  CLIENT
}
